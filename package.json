{
  "name": "mongo2elastic",
  "version": "0.55.0",
  "description": "Sync MongoDB collections to Elasticsearch",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/smartprocure/mongo2elastic.git"
  },
  "scripts": {
    "prepare": "npm test && npm run lint && npm run build",
    "test": "vitest run",
    "test:watch": "DEBUG=mongo* vitest",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --declaration",
    "build:watch": "tsc --watch",
    "lint": "eslint src/**",
    "fmt": "prettier --ignore-path .gitignore --write './'"
  },
  "keywords": [
    "mongodb",
    "mongo",
    "json",
    "schema",
    "collection",
    "elastic",
    "elasticsearch",
    "index",
    "sync",
    "change",
    "stream"
  ],
  "author": "GovSpend",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@batou.dev/bytes": "^0.5.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "globals": "^16.3.0",
    "mongochangestream-testing": "^0.6.0",
    "ms": "^2.1.3",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": ">= 8.14.0",
    "ioredis": ">= 5.4.1",
    "mongodb": ">= 6.8.0"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "eventemitter3": "^5.0.1",
    "lodash": "^4.17.21",
    "make-error": "^1.3.6",
    "minimatch": "^10.0.3",
    "mongochangestream": "^0.62.0",
    "obj-walker": "^2.4.0",
    "prom-utils": "^0.16.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^[./]"
    ],
    "importOrderSortSpecifiers": true,
    "importOrderCaseInsensitive": true,
    "importOrderSeparation": true
  }
}
