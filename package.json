{
  "name": "mongo2elastic",
  "version": "0.34.0",
  "description": "Sync MongoDB collections to Elasticsearch",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": "git://github.com/smartprocure/mongo2elastic.git",
  "scripts": {
    "prepare": "npm test && npm run lint && npm run build",
    "test": "jest",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --declaration",
    "build:watch": "tsc --watch",
    "lint": "eslint src/**",
    "fmt": "prettier --ignore-path .gitignore --write './'"
  },
  "keywords": [
    "mongodb",
    "mongo",
    "json",
    "schema",
    "collection",
    "elastic",
    "elasticsearch",
    "index",
    "sync",
    "change",
    "stream"
  ],
  "author": "GovSpend",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^28.1.8",
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "eslint": "^8.39.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.8",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": ">= 8.2.1",
    "ioredis": ">= 5.2.3",
    "mongodb": ">= 4.10.0"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "eventemitter3": "^5.0.1",
    "lodash": "^4.17.21",
    "minimatch": "^6.2.0",
    "mongochangestream": "^0.40.0",
    "obj-walker": "^1.7.0",
    "p-retry": "^5.1.1",
    "prom-utils": "^0.4.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
